{
  "name"            :"Foil",
  "version"         :"0.2",
  "manifest_version":2,
  "description"     :"Does weird stuff on StackExchange sites",
  "content_scripts" :[
    {
      "exclude_globs"  :[],
      "exclude_matches":[],
      "include_globs"  :["http://superuser.com/*"],
      "js"             :["foil.user.js"],
      "matches"        :["http://*/*", "https://*/*"],
      "run_at"         :"document_idle"
    }
  ],
  "permissions"     :[
    "http://superuser.com/"
  ]

}
